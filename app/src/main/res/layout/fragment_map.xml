<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapTest.MapFragment01">

    <com.djowda.djowdageminimap.MapTest.Custom2DScrollView
        android:id="@+id/customScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.djowda.djowdageminimap.MapTest.Custom2DScrollView>

    <!-- Statistics Panel -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="@drawable/stats_panel_background"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Statistics"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Users: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDeliveryMen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Delivery Men: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvStores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Stores: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Transport: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvRestaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Restaurants: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFactory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Factory: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvWholeSellers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="WholeSellers: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFarmers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Farmers: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSeedProviders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seed Providers: 0"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- AI Chat Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/navigation_panel_background"
        android:orientation="horizontal"
        android:padding="12dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/etAiChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_background"
            android:hint="Ask AI to navigate (e.g., 'Navigate to Canberra')"
            android:textColorHint="@android:color/holo_orange_dark"
            android:inputType="textCapSentences"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/andika"
            android:maxLines="2"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:background="@drawable/button_background"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

</FrameLayout>